<h1>Welcome to Daily Journal</h1>
<h3>Your Space to Reflect, Write, and Grow</h3>
<br>
<p> <%= homeStartingContent %></p>

<% posts.forEach(function(post){ %>

    <h1><%= post.title %></h1>
    <p><%= post.content.length > 100 ? post.content.substring(0, 100) + "..." : post.content %>
    <a href="posts/<%= post.title %>">Read More</a>
    </p>
    

<% }); %>
